<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <android.support.design.widget.TabLayout
        android:id="@+id/book_fragment_main_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#5a0"
        app:tabSelectedTextColor="#5a0"
        app:tabTextColor="@color/gray" />
    <!--
    app:tabIndicatorColor="@color/white"                 // 下方滚动的下划线颜色
    app:tabSelectedTextColor="@color/gray"               // tab被选中后，文字的颜色
    app:tabTextColor="@color/white"                      // tab默认的文字颜色
    -->
    
    <android.support.v4.view.ViewPager
        android:id="@+id/book_fragment_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
